---
// 逻辑部分（可在此处获取数据或定义变量）
const pageTitle = "欢迎来到阿马尔菲海岸";
const destinations = [
  {
    name: "波西塔诺",
    description: "悬崖上的彩色小镇...",
    image: "/images/positano.jpg"
  },
  // 其他目的地...
];
---
<!-- HTML 模板部分 -->
<html lang="zh">
<head>
  <title>{pageTitle}</title>
  <style>
    /* 内联样式 */
    body { font-family: 'Arial', sans-serif; }
    .hero { background: #f0f8ff; padding: 2rem; }
  </style>
</head>
<body>
  <main class="container">
    <section class="hero">
      <h1>{pageTitle}</h1>
      <p>探索意大利最梦幻的海岸线</p>
    </section>

    <!-- 动态生成内容 -->
    {destinations.map(item => (
      <article>
        <h2>{item.name}</h2>
        <p>{item.description}</p>
        <img src={item.image} alt={item.name} width="800" height="450" />
      </article>
    ))}
  </main>
</body>
</html>
